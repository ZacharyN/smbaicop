        </div>
      </div>

      <!-- CTA Button -->
      <div class="hidden lg:block">
        <a href="#pricing" class="bg-gradient-to-r from-accent-lime-400 to-accent-lime-500 hover:from-accent-lime-500 hover:to-accent-lime-600 text-white font-semibold py-2 px-6 rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 text-sm">
